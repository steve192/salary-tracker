{
  "name": "salary-tracker-desktop",
  "version": "0.1.0",
  "private": true,
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.salarytracker.desktop",
    "productName": "Salary Tracker",
    "directories": {
      "output": "dist"
    },
    "extraResources": [
      {
        "from": "backend/dist",
        "to": "backend"
      }
    ],
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Office"
    },
    "win": {
      "target": [
        "portable"
      ]
    }
  },
  "devDependencies": {
    "electron": "^28.2.3",
    "electron-builder": "^24.9.1"
  }
}
