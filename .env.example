# Salary Tracker environment template. Copy to .env and tweak values per environment.

# --- Core Django configuration ---
# Required everywhere: generate a long random string before deploying to production.
DJANGO_SECRET_KEY=change-me

# Enables Django debug pages and auto-reload; keep true locally, set to false otherwise.
DJANGO_DEBUG=false

# Comma-separated hostnames Django may serve when DEBUG=false; required in production.
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Comma-separated HTTPS origins allowed to post CSRF-protected requests (needed behind proxies).
DJANGO_CSRF_TRUSTED_ORIGINS=http://localhost

# Override the default timezone for displaying dates; falls back to the server timezone when unset.
DJANGO_TIME_ZONE=UTC

# Disable self-service registration so admins invite users manually; flip to true to allow /accounts/register.
DJANGO_ALLOW_SELF_REGISTRATION=false

# --- Paths and URLs ---
# Point to an alternate SQLite file (absolute path) if you do not want db.sqlite3 inside the repo.
DJANGO_DB_PATH=/app/data/db.sqlite3

# Set when hosting the app under a URL prefix (e.g. /salary) so Django builds correct absolute URLs.
DJANGO_FORCE_SCRIPT_NAME=

# Override when FORCE_SCRIPT_NAME is set or when serving static files via CDN.
DJANGO_STATIC_URL=/static/

# Override when FORCE_SCRIPT_NAME is set or when media files live on a different domain.
DJANGO_MEDIA_URL=/media/

# --- Logging ---
# Controls console logging verbosity: DEBUG, INFO, WARNING, ERROR, or CRITICAL.
DJANGO_LOG_LEVEL=INFO

# --- Deployment/runtime tweaks ---
# Number of worker processes when running gunicorn (e.g., in Docker or production).
GUNICORN_WORKERS=3
